{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"], 
      "@core/*": ["src/core/*"],
      "@external/*": ["src/external/*"],
      "@adapters/*": ["src/adapters/*"],
    },
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.db"],
  "exclude": [
    "node_modules", 
  ]
}